<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:GarageService.ClientApp.ViewModels"
             x:Class="GarageService.ClientApp.Views.AddServiceTypePage"
             >
    <Shell.TitleView>
        <Grid BackgroundColor="#4CAF50" ColumnDefinitions ="Auto,*">
            <!-- Material Design Green 800 -->
            <HorizontalStackLayout Spacing="16" 
                      VerticalOptions="Center"
                      Margin="20,0">

                <!-- Title -->
                <Label Text="Add Service Types" 
                       VerticalOptions="Center" 
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White"/>

                <!-- Spacer -->
                <BoxView Color="Transparent" HorizontalOptions="FillAndExpand" />

                <!-- Save Button -->
                <Button Text="✓" 
                        FontSize="28"
                        FontAttributes="Bold"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        VerticalOptions="Center"
                        HorizontalOptions="End"
                        Padding="16,0"
                        Command="{Binding SaveCommand}">
                                <Button.Triggers>
                                    <DataTrigger TargetType="Button" 
                                     Binding="{Binding IsBusy}" 
                                     Value="True">
                                        <Setter Property="Text" Value="⏳" />
                                    </DataTrigger>
                                </Button.Triggers>
                </Button>
            </HorizontalStackLayout>
        </Grid>
    </Shell.TitleView>

    <VerticalStackLayout Padding="20" Spacing="16">
        <Label Text="Select Service Types" FontSize="20" FontAttributes="Bold"/>
        <CollectionView x:Name="ServiceTypesCollection"
                        ItemsSource="{Binding AvailableServiceTypes}"
                        SelectionMode="Multiple"
                        >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="10" Margin="0,0,0,10" BackgroundColor="White" CornerRadius="8">
                        <HorizontalStackLayout Spacing="25">
                            <CheckBox IsChecked="{Binding IsSelected}" Color="#3498DB"/>
                            <Label Text="{Binding Description}" FontAttributes="Bold"/>
                            <Entry Placeholder="Cost" 
                                   Text="{Binding Cost}" 
                                   Keyboard="Numeric"/>
                            <Entry Placeholder="Currency" 
                                   Text="{Binding CurrId}" 
                                   Keyboard="Numeric"/>
                            
                            <Editor Text="{Binding Notes}" 
                                     HeightRequest="100"
                                     BackgroundColor="White"
                                     TextColor="{StaticResource Gray900}"
                                     AutoSize="TextChanges"/>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Done" Command="{Binding DoneCommand}" BackgroundColor="#4CAF50" TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>