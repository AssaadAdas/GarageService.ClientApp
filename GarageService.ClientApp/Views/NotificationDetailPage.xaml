<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:views="clr-namespace:GarageService.ClientApp.Views"
             x:Class="GarageService.ClientApp.Views.NotificationDetailPage"
             >
    <Grid RowDefinitions="Auto,*">
        <views:TitleView Title="Notifications"
                         SaveCommand="{Binding SaveCommand}"
                         BackCommand="{Binding GoBack}"
                         Grid.Row="0"/>
        <VerticalStackLayout Grid.Row="1">

            <Entry Placeholder="Notes" 
              Text="{Binding ClientNotification.Notes}"
              Style="{StaticResource FormEntry}"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>