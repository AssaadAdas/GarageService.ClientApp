<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageService.ClientApp.Views.ServicePage"
             Title="Add Services">

    <Shell.TitleView>
        <FlexLayout BackgroundColor="#4CAF50" 
                   JustifyContent="SpaceBetween" 
                   AlignItems="Center"
                   Padding="20,0">

            <Label Text="Add Services" 
                  FontSize="24"
                  FontAttributes="Bold"
                  TextColor="White"/>

            <Button Text="✓" 
                    FontSize="28"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Padding="16,0"
                    Command="{Binding SaveCommand}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button" 
                                 Binding="{Binding IsBusy}" 
                                 Value="True">
                        <Setter Property="Text" Value="⏳" />
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </FlexLayout>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Form Section -->
            <VerticalStackLayout Spacing="15">
                <!-- Date Field -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Date" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    <DatePicker Date="{Binding ServiceDate}"
                                BackgroundColor="White"
                                TextColor="{StaticResource Gray900}"/>
                </VerticalStackLayout>

                <!-- Odometer Field -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Odometer" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    <Entry Text="{Binding Odometer}" 
                           Keyboard="Numeric"
                           BackgroundColor="White"
                           TextColor="{StaticResource Gray900}"/>
                </VerticalStackLayout>

                <!-- Garage Picker -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Select Garage *" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    <Picker ItemsSource="{Binding Garages}"
                            ItemDisplayBinding="{Binding GarageName}"
                            SelectedItem="{Binding SelectedGarage}"
                            TitleColor="{StaticResource Gray600}"
                            TextColor="{StaticResource Gray900}"/>
                </VerticalStackLayout>

                <!-- Notes Field -->
                <VerticalStackLayout Spacing="5">
                    <Label Text="Notes" 
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"/>
                    <Editor Text="{Binding Notes}" 
                            HeightRequest="100"
                            BackgroundColor="White"
                            TextColor="{StaticResource Gray900}"
                            AutoSize="TextChanges"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Service Types Section -->
            <VerticalStackLayout Spacing="15">
                <Label Text="Service Types" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"/>

                <CollectionView ItemsSource="{Binding SelectedServiceTypes}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="15"
                                   Margin="0,0,0,10"
                                   BackgroundColor="White"
                                   CornerRadius="10"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="8">
                                    <HorizontalStackLayout>
                                        <Label Text="Type:" 
                                               FontAttributes="Bold"
                                               WidthRequest="80"/>
                                        <Label Text="{Binding ServiceTypeId}"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout>
                                        <Label Text="Cost:" 
                                               FontAttributes="Bold"
                                               WidthRequest="80"/>
                                        <Label Text="{Binding Cost, StringFormat='{0:C}'}"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout>
                                        <Label Text="Currency:" 
                                               FontAttributes="Bold"
                                               WidthRequest="80"/>
                                        <Label Text="{Binding CurrencyId}"/>
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout>
                                        <Label Text="Note:" 
                                               FontAttributes="Bold"
                                               WidthRequest="80"/>
                                        <Label Text="{Binding Notes}"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <Button Text="Type of service" 
                        Command="{Binding AddServiceTypeCommand}" 
                        BackgroundColor="#3498DB"
                        TextColor="White"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        CornerRadius="25"
                        Margin="0,10"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>