<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageService.ClientApp.Views.ClientRegistrationPage"
             Title="Create Account"
             BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Header -->
            <Label Text="Create Account" 
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"/>

            <Label Text="Join our community today" 
               FontSize="14"
               TextColor="{AppThemeBinding Light={StaticResource SecondaryTextLight}, Dark={StaticResource SecondaryTextDark}}"
               HorizontalOptions="Center"/>
            <BoxView HeightRequest="1" 
                     Color="{DynamicResource SeparatorColor}"
                     HorizontalOptions="Fill"
                     Margin="0,0,0,10"/>

            <Border Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15"
                    BackgroundColor="{DynamicResource SectionBackgroundColor}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Account Information" 
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{DynamicResource SectionHeaderColor}"
                           Margin="0,0,0,5"/>

                    <Label Text="Username *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    <Entry Placeholder="Username" 
                           Text="{Binding Username}"
                           Style="{StaticResource FormEntry}"/>
                    
                    <Label Text="Password *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    
                    <Entry Placeholder="Password" 
                           Text="{Binding Password}"
                           IsPassword="True"
                           Style="{StaticResource FormEntry}"/>
                    
                    <Label Text="Confirm Password *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    <Entry Placeholder="Confirm Password" 
                           Text="{Binding ConfirmPassword}"
                           IsPassword="True"
                           Style="{StaticResource FormEntry}"/>
                </VerticalStackLayout>

            </Border>

            <Border Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15"
                    BackgroundColor="{DynamicResource SectionBackgroundColor}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Personal Information" 
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{DynamicResource SectionHeaderColor}"
                           Margin="0,0,0,5"/>

                    <Label Text="First Name *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    <Entry Placeholder="First Name" 
                               Text="{Binding FirstName}"
                               Style="{StaticResource FormEntry}"/>
                    <Label Text="Last Name *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    <Entry Placeholder="Last Name" 
                               Text="{Binding LastName}"
                               Style="{StaticResource FormEntry}"/>

                    <Label Text="Address *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    
                    <Entry Placeholder="Address" 
                           Text="{Binding Address}"
                           Style="{StaticResource FormEntry}"/>

                    <Picker Title="Select Country *"
                            ItemsSource="{Binding Countries}"
                            SelectedIndex="{Binding CountryId}"
                            Style="{StaticResource FormPicker}"/>
                </VerticalStackLayout>
            </Border>

            <Border Stroke="{DynamicResource BorderColor}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 10"
                    Padding="15"
                    BackgroundColor="{DynamicResource SectionBackgroundColor}">

                <VerticalStackLayout Spacing="10">

                    <Label Text="Contact Information" 
                           FontAttributes="Bold"
                           FontSize="16"
                           TextColor="{DynamicResource SectionHeaderColor}"
                           Margin="0,0,0,5"/>
                    <Label Text="Email *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>

                    <Entry Placeholder="Email" 
                           Text="{Binding Email}"
                           Keyboard="Email"
                           Style="{StaticResource FormEntry}"/>

                    <Label Text="Ext *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    
                    <Entry Placeholder="Ext" 
                               Text="{Binding PhoneExt}"
                               Keyboard="Telephone"
                               Style="{StaticResource FormEntry}"/>

                    <Label Text="Phone Number *" 
                           FontAttributes="Bold"
                           TextColor="{DynamicResource LabelTextColor}"/>
                    
                    <Entry Placeholder="Phone Number" 
                               Text="{Binding PhoneNumber}"
                               Keyboard="Telephone"
                               Style="{StaticResource FormEntry}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Register Button -->
            <Button Text="Register" 
                    Command="{Binding RegisterCommand}"
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,20,0,0"/>

            <!-- Login Link -->
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         Spacing="5">
                <Label Text="Already have an account?" 
                       Style="{StaticResource SecondaryLabel}"/>

                <Label Text="Sign In" 
                       TextColor="{StaticResource PrimaryColor}"
                       FontAttributes="Bold">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToLoginCommand}"/>
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>