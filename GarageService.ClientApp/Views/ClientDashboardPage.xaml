<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarageService.ClientApp.Views.ClientDashboardPage"
             Title="Client Dashboard"
             BackgroundColor="{AppThemeBinding Light=#F5F7FA, Dark=#1A1A1A}">

    <Grid x:Name="Maingrid" RowDefinitions="Auto,*,Auto" RowSpacing="0">
        
        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="0,0,0,10">
            <VerticalStackLayout Spacing="20" Padding="16,16,16,80">
                
                <!-- Client Profile Card -->
                <Frame CornerRadius="16" 
                       Padding="20"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="My Profile" 
                               FontAttributes="Bold" 
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"
                                 HorizontalOptions="Fill"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="👤"
                                   FontSize="16"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}">

                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="ClientProfile.FirstName"/>
                                        <Binding Path="ClientProfile.LastName"/>
                                    </MultiBinding>
                                </Label.Text>
                            </Label>

                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="✉️"
                                   FontSize="16"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding ClientProfile.Email}"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}"/>
                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="📞"
                                   FontSize="16"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light=#555555, Dark=#CCCCCC}">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0} {1}">
                                        <Binding Path="ClientProfile.PhoneExt"/>
                                        <Binding Path="ClientProfile.PhoneNumber"/>
                                    </MultiBinding>
                                </Label.Text>
                            </Label>

                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Vehicles Card -->
                <Frame CornerRadius="16" 
                       Padding="20"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="My Vehicles" 
                               FontAttributes="Bold" 
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"
                                 HorizontalOptions="Fill"/>
                        
                        <CollectionView ItemsSource="{Binding Vehicles}" 
                                      EmptyView="No vehicles registered">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="12" 
                                           Padding="16"
                                           Margin="0,0,0,10"
                                           BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"
                                           HasShadow="True">
                                        <Grid ColumnDefinitions="Auto,*" RowSpacing="8">
                                            <Label Grid.Column="0"
                                                   Text="🚗"
                                                   FontSize="16"
                                                   VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Model}" 
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                                <Label Text="{Binding LicensePlate}" 
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Appointments Card -->
                <Frame CornerRadius="16" 
                       Padding="20"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Upcoming Appointments" 
                               FontAttributes="Bold" 
                               FontSize="20"
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                        
                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"
                                 HorizontalOptions="Fill"/>
                        
                        <CollectionView ItemsSource="{Binding Appointments}"
                                      EmptyView="No upcoming appointments">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame CornerRadius="12" 
                                           Padding="16"
                                           Margin="0,0,0,10"
                                           BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"
                                           HasShadow="True">
                                        <Grid ColumnDefinitions="Auto,*" RowSpacing="8">
                                            <Label Grid.Column="0"
                                                   Text="📅"
                                                   FontSize="16"
                                                   VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}" 
                                                       FontAttributes="Bold"
                                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                                <Label Text="{Binding ServiceType}" 
                                                       FontSize="14"
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                <Label Text="{Binding Status}" 
                                                       FontSize="12"
                                                       TextColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom App Bar -->
        <Grid x:Name="BottomAppBar" 
              Grid.Row="2"
              Padding="16,8"
              BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
              HeightRequest="70"
              Shadow="{StaticResource BottomShadow}">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- History Button -->
            <Button Grid.Column="0"
                   Text="History"
                   ImageSource="history_icon.png"
                   Command="{Binding OpenHistoryCommand}"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                   BackgroundColor="Transparent"
                   FontAttributes="Bold"
                   CornerRadius="8"/>

            <!-- FAB Button -->
            <Frame Grid.Column="1"
                   Padding="0"
                   CornerRadius="28"
                   HeightRequest="56"
                   WidthRequest="56"
                   BackgroundColor="#4CAF50"
                   HasShadow="True"
                   VerticalOptions="Center"
                   HorizontalOptions="Center">
                <Button Text="+"
                       FontSize="24"
                       TextColor="White"
                       BackgroundColor="Transparent"
                       Clicked="OnPlusClicked"
                       Padding="0"/>
            </Frame>

            <!-- Settings Button -->
            <Button Grid.Column="2"
                   Text="Settings"
                   ImageSource="settings_icon.png"
                   Command="{Binding OpenSettingsCommand}"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                   BackgroundColor="Transparent"
                   FontAttributes="Bold"
                   CornerRadius="8"/>
        </Grid>
    </Grid>
</ContentPage>