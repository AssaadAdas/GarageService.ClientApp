<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:material="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
              xmlns:viewmodel="clr-namespace:GarageService.ClientApp.ViewModels"
             x:Class="GarageService.ClientApp.Views.ClientDashboardPage"
             xmlns:views="clr-namespace:GarageService.ClientApp.Views"
             x:Name="PageRoot"
             BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#121212}">

    <Grid RowDefinitions="Auto,*,Auto">
        <views:DashBoardTitle 
            Title="Client DashBoard"
            SaveCommand="{Binding LogOutCommand}"
            PremuimCommand="{Binding PremuimCommand}"
            ClientPremiumRegistration="{Binding ClientPremiumRegistration}"
            ClientProfile="{Binding ClientProfile}"
            IsPremium="{Binding ClientProfile.IsPremium}"
            Grid.Row="0"/>
        <Grid Grid.Row="1" RowDefinitions="Auto,*,Auto" RowSpacing="0">
          <!-- Main Content -->
          <ScrollView Grid.Row="1" Padding="0">
            <VerticalStackLayout Spacing="24" Padding="20,16,20,80">

                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                        <!-- Vehicles Card -->
                        <Frame   Grid.Column="0"
                          BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                          CornerRadius="16"
                          Padding="20"
                          HasShadow="True"
                          Shadow="{StaticResource ShadowSmall}">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,*" ColumnSpacing="20" Padding="20">
                                    <!-- Label docked to left -->
                                    <Label Grid.Column="0" Text="My Vehicles"   
                                       FontAttributes="Bold"   
                                       FontSize="20"  
                                       TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                       HorizontalOptions="Start"/>

                                    <!-- Button docked to right -->
                                    <Button Grid.Column="1" Text="+"
                                       CornerRadius="12"
                                       HeightRequest="40"
                                       WidthRequest="40" 
                                       BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                       TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                       FontFamily="Medium"
                                       FontSize="20"
                                       HorizontalOptions="End"  
                                       VerticalOptions="Center"
                                       Command="{Binding AddVehicleCommand}"/>
                                </Grid>
                                <BoxView HeightRequest="1"   
                                  BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"  
                                  HorizontalOptions="Fill"/>

                                <CollectionView ItemsSource="{Binding ClientProfile.Vehicles}"   
                                        EmptyView="No vehicles registered">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                            Padding="16"  
                                            Margin="0,0,0,10"  
                                            BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                            HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                                                    <!-- Simplified row definition -->
                                                    <!-- Left-aligned vehicle info -->
                                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                                        <!-- Reduced spacing for better compactness -->
                                                        <Label Text="{Binding VehicleName}"   
                                                      FontAttributes="Bold"  
                                                      TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>
                                                        <Label Text="{Binding LiscencePlate}"   
                                                       FontSize="14"  
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                    </VerticalStackLayout>

                                                    <!-- Right-aligned buttons -->
                                                    <HorizontalStackLayout Grid.Column="1" 
                                                                   VerticalOptions="Center"
                                                                   HorizontalOptions="End"
                                                                   Spacing="12">
                                                        <!-- Reduced spacing between buttons -->
                                                        <Button Text="âš™ï¸" 
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ClientDashboardViewModel}}, Path=ShowPopUpCommand}" 
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                        FontSize="16"
                                                        Padding="0"
                                                        HeightRequest="36"
                                                        WidthRequest="36"
                                                        CornerRadius="18"/>
                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                            </VerticalStackLayout>
                        </Frame>

                        <!-- Notification Card -->
                        <Frame Grid.Column="1"
                           CornerRadius="16"   
                       Padding="20"  
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D2D}"  
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"  
                       HasShadow="True">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Upcoming Notifications"   
                               FontAttributes="Bold"   
                               FontSize="20"  
                               
                               TextColor="{AppThemeBinding Light=#333333, Dark=White}"/>

                                <BoxView HeightRequest="1"   
                                 BackgroundColor="{AppThemeBinding Light=#EEEEEE, Dark=#444444}"  
                                 HorizontalOptions="Fill"/>

                                <CollectionView ItemsSource="{Binding ClientProfile.ClientNotifications}" 
                                        SelectionMode="Single"
                                        EmptyView="No upcoming Notification">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                           Padding="16"  
                                           Margin="0,0,0,10"  
                                           BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                           HasShadow="True">
                                                <Frame.Triggers>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding IsRead}" Value="False">
                                                        <Setter Property="BackgroundColor" Value="Red"/>
                                                    </DataTrigger>
                                                    <DataTrigger TargetType="Frame" Binding="{Binding IsRead}" Value="True">
                                                        <Setter Property="BackgroundColor" Value="White"/>
                                                    </DataTrigger>
                                                </Frame.Triggers>
                                                <Grid ColumnDefinitions="*,Auto" RowSpacing="8">
                                                    <!-- Left-aligned content -->
                                                    <VerticalStackLayout Grid.Column="0" Spacing="4" HorizontalOptions="Start">
                                                        <Label Text="{Binding Notes}"  
                                                       FontSize="14"  
                                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                    </VerticalStackLayout>

                                                    <!-- Right-aligned button -->
                                                    <VerticalStackLayout Grid.Column="1" 
                                                                 VerticalOptions="Center"
                                                                 HorizontalOptions="End"
                                                                 Spacing="8">
                                                        <Button Text="âœï¸" 
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ClientDashboardViewModel}}, Path=ReadNoteCommand}" 
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Transparent"
                                                        TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                        FontSize="16"
                                                        Padding="0"
                                                        HeightRequest="36"
                                                        WidthRequest="36"
                                                        CornerRadius="18"/>
                                                    </VerticalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <!-- Pending Orders Card -->
                    <Grid ColumnDefinitions="*,Auto">
                        <Border Grid.Column="0"
                                Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#2D2D2D}"
                                StrokeThickness="1"
                                BackgroundColor="{AppThemeBinding Light=White, Dark=#252525}"
                                Padding="20"
                                HorizontalOptions="Fill"
                                VerticalOptions="Start"
                                Margin="20,20,0,20">
                            <VerticalStackLayout Spacing="16">
                                <Label Grid.Row="0" Grid.Column="0" 
                                           Text="Pending Orders"   
                                           FontAttributes="Bold"   
                                           FontSize="20"  
                                           TextColor="{AppThemeBinding Light=#333333, Dark=White}"
                                           HorizontalOptions="Start"/>
                                <CollectionView ItemsSource="{Binding PendingOrders}"   
                                                EmptyView="No Pending Orders">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Frame CornerRadius="12"   
                                                   Padding="16"  
                                                   Margin="0,0,0,10"  
                                                   BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#3A3A3A}"  
                                                   HasShadow="True">
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <VerticalStackLayout Grid.Column="0" Spacing="8">
                                                        <Label FontAttributes="Bold"  
                                                               TextColor="{AppThemeBinding Light=#333333, Dark=White}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding OrderNumber}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                        <Label FontSize="14"  
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <Span Text="{Binding Amount}" FontAttributes="Bold"/>
                                                                    <Span Text=" "/>
                                                                    <Span Text="{Binding Curr.CurrDesc}" FontAttributes="Bold"/>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </VerticalStackLayout>

                                                    <HorizontalStackLayout Grid.Column="1" 
                                                                           VerticalOptions="Center"
                                                                           HorizontalOptions="End"
                                                                           Spacing="12">

                                                        <Button x:Name="btnGePending" 
                                                                Text="âœï¸"
                                                                Command="{Binding BindingContext.GoPendingOrderCommand, Source={x:Reference PageRoot}}"
                                                                CommandParameter="{Binding .}"
                                                                BackgroundColor="Transparent"
                                                                TextColor="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}"
                                                                FontSize="16"
                                                                Padding="0"
                                                                HeightRequest="36"
                                                                WidthRequest="36"
                                                                CornerRadius="18"/>

                                                    </HorizontalStackLayout>
                                                </Grid>
                                            </Frame>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
        </ScrollView>
           
        </Grid>

        <!-- Tabbed Menu Footer -->
        <Border Grid.Row="2"
          BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
          Stroke="{AppThemeBinding Light=#E5E5E5, Dark=#333333}"
          StrokeThickness="1"
          Padding="0"
          HorizontalOptions="Fill">

            <Grid ColumnDefinitions="*,*,*,*" 
            ColumnSpacing="0"
            Padding="16,12,16,24"
            HeightRequest="80">

                <!-- Dashboard Tab -->
                <Border Grid.Column="0"
                  BackgroundColor="Transparent"
                  Padding="8"
                  HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToDashboardCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸ " 
                         FontSize="20"
                         HorizontalOptions="Center"/>
                        <Label Text="Dashboard"
                         FontSize="12"
                         TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                         HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Vehicles Tab -->
                <Border Grid.Column="1"
                  BackgroundColor="Transparent"
                  Padding="8"
                  HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToVehiclesCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸš—" 
                         FontSize="20"
                         HorizontalOptions="Center"/>
                        <Label Text="Vehicles"
                         FontSize="12"
                         TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                         HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Appointments Tab -->
                <Border Grid.Column="2"
                  BackgroundColor="Transparent"
                  Padding="8"
                  HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToAppointmentsCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="ðŸ“…" 
                         FontSize="20"
                         HorizontalOptions="Center"/>
                        <Label Text="Appointments"
                         FontSize="12"
                         TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                         HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Settings Tab -->
                <Border Grid.Column="3"
                  BackgroundColor="Transparent"
                  Padding="8"
                  HorizontalOptions="Center">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoSettingCommand}"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                        <Label Text="âš™ï¸" 
                         FontSize="20"
                         HorizontalOptions="Center"/>
                        <Label Text="Settings"
                         FontSize="12"
                         TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                         HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Border>
    </Grid>
</ContentPage>