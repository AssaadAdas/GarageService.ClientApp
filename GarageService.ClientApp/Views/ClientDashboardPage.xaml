<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GarageService.ClientApp.Views.ClientDashboardPage"
             Title="Client Dashboard"
             BackgroundColor="{AppThemeBinding Light=#F8FAFC, Dark=#121212}">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">

        <!-- Main Content -->
        <ScrollView Grid.Row="1" Padding="0">
            <VerticalStackLayout Spacing="24" Padding="20,16,20,80">

                <!-- Client Profile Card - Modern Design -->
                <Frame CornerRadius="20" 
                       Padding="24"
                       BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                       BorderColor="{AppThemeBinding Light=#F0F0F0, Dark=#333333}"
                       HasShadow="True"
                       Shadow="{StaticResource ShadowMedium}">
                    <VerticalStackLayout Spacing="16">
                        <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                            <Image Source="profile_icon.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Aspect="AspectFit"/>
                            <Label Text="My Profile" 
                                   FontAttributes="Bold" 
                                   FontSize="20"
                                   FontFamily="Medium"
                                   TextColor="{AppThemeBinding Light=#1E293B, Dark=White}"/>
                        </HorizontalStackLayout>

                        <BoxView HeightRequest="1" 
                                 BackgroundColor="{AppThemeBinding Light=#F1F5F9, Dark=#333333}"
                                 HorizontalOptions="Fill"/>

                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                            <!-- Name -->
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="ðŸ‘¤"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="0" Grid.Column="1"
                                   FontSize="16"
                                   FontFamily="Regular"
                                   TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ClientProfile.FirstName}" FontAttributes="Bold"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding ClientProfile.LastName}" FontAttributes="Bold"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>

                            <!-- Email -->
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="âœ‰ï¸"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding ClientProfile.Email}"
                                   FontSize="16"
                                   FontFamily="Regular"
                                   TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>

                            <!-- Phone -->
                            <Label Grid.Row="2" Grid.Column="0"
                                   Text="ðŸ“ž"
                                   FontSize="18"
                                   VerticalOptions="Center"/>
                            <Label Grid.Row="2" Grid.Column="1"
                                   FontSize="16"
                                   FontFamily="Regular"
                                   TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding ClientProfile.PhoneExt}" FontAttributes="Bold"/>
                                        <Span Text=" "/>
                                        <Span Text="{Binding ClientProfile.PhoneNumber}"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>

                        <!-- Edit Profile Button -->
                        <Button Text="Edit Profile"
                                Margin="0,8,0,0"
                                CornerRadius="12"
                                HeightRequest="40"
                                BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                                TextColor="{AppThemeBinding Light=#2563EB, Dark=#60A5FA}"
                                FontFamily="Medium"
                                FontSize="14"
                                HorizontalOptions="Fill"
                                Command="{Binding EditProfileCommand}"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Quick Stats Cards -->
                <Grid ColumnDefinitions="*,16,*" RowSpacing="16">
                    <!-- Vehicles Card -->
                    <Frame Grid.Column="0" 
                           BackgroundColor="{AppThemeBinding Light=#EFF6FF, Dark=#1E3A8A}"
                           CornerRadius="16"
                           Padding="20"
                           HasShadow="True"
                           Shadow="{StaticResource ShadowSmall}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Image Source="car_icon.png"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       Aspect="AspectFit"/>
                                <Label Text="MY VEHICLES" 
                                       FontSize="14"
                                       FontFamily="Medium"
                                       TextColor="{AppThemeBinding Light=#2563EB, Dark=#BFDBFE}"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding ClientProfile.Vehicles.Count}" 
                                   FontSize="28"
                                   FontFamily="Bold"
                                   TextColor="{AppThemeBinding Light=#1E40AF, Dark=White}"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Notification Card -->
                    <Frame Grid.Column="2" 
                           BackgroundColor="{AppThemeBinding Light=#F5F3FF, Dark=#4C1D95}"
                           CornerRadius="16"
                           Padding="20"
                           HasShadow="True"
                           Shadow="{StaticResource ShadowSmall}">
                        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                            <HorizontalStackLayout Spacing="8" HorizontalOptions="Center">
                                <Image Source="bell_icon.png"
                                       WidthRequest="24"
                                       HeightRequest="24"
                                       Aspect="AspectFit"/>
                                <Label Text="NOTIFICATIONS" 
                                       FontSize="14"
                                       FontFamily="Medium"
                                       TextColor="{AppThemeBinding Light=#6D28D9, Dark=#C4B5FD}"/>
                            </HorizontalStackLayout>
                            <Label Text="{Binding ClientProfile.ClientNotifications.Count}" 
                                   FontSize="28"
                                   FontFamily="Bold"
                                   TextColor="{AppThemeBinding Light=#5B21B6, Dark=White}"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Modern Bottom App Bar -->
        <Grid Grid.Row="2"
              Padding="0"
              HeightRequest="80"
              BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}">

            <Border Stroke="Transparent"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 0,0,0,0"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#1E1E1E}"
                    Shadow="{StaticResource BottomShadow}">
                <Grid ColumnDefinitions="*,*,*,*" 
                      RowDefinitions="*"
                      Padding="16,8,16,16">

                    <!-- Home Button -->
                    <Button Grid.Column="0"
                           Text="Home"
                           
                           Command="{Binding GoHomeCommand}"
                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                           BackgroundColor="Transparent"
                           FontFamily="Medium"
                           FontSize="12"
                           CornerRadius="0"
                           Padding="0,4,0,0">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialIcons"
                                            Glyph="&#xe88a;"
                                            Size="24"
                                            Color="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>
                        </Button.ImageSource>
                    </Button>

                    <!-- History Button -->
                    <Button Grid.Column="1"
                           Text="History"
                          
                           Command="{Binding OpenHistoryCommand}"
                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                           BackgroundColor="Transparent"
                           FontFamily="Medium"
                           FontSize="12"
                           CornerRadius="0"
                           Padding="0,4,0,0">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialIcons"
                                            Glyph="&#xe889;"
                                            Size="24"
                                            Color="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>
                        </Button.ImageSource>
                    </Button>

                    <!-- FAB Button -->
                    <Button Grid.Column="2"
                           Text="+"
                           Command="{Binding AddNewCommand}"
                           BackgroundColor="lightgreen"
                           WidthRequest="56"
                           HeightRequest="56"
                           CornerRadius="28"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,-20,0,0">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialIcons"
                                            Glyph="&#xe145;"
                                            Size="24"
                                            Color="White"/>
                        </Button.ImageSource>
                    </Button>

                    <!-- Settings Button -->
                    <Button Grid.Column="3"
                           Text="Settings"
                           
                           Command="{Binding OpenSettingsCommand}"
                           TextColor="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"
                           BackgroundColor="Transparent"
                           FontFamily="Medium"
                           FontSize="12"
                           CornerRadius="0"
                           Padding="0,4,0,0">
                        <Button.ImageSource>
                            <FontImageSource FontFamily="MaterialIcons"
                                            Glyph="&#xe8b8;"
                                            Size="24"
                                            Color="{AppThemeBinding Light=#64748B, Dark=#A1A1AA}"/>
                        </Button.ImageSource>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>